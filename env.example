# Application Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1
BASE_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/pricing_calculator
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pricing_calculator
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d
DOMAIN_RESTRICTION=agile6.com

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Multi-tenant Configuration (for future SaaS integration)
DEFAULT_TENANT_ID=agile6-default
TENANT_ISOLATION_ENABLED=true

